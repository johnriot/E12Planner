<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neoware.brazilplanner"
    android:versionCode="7"
    android:versionName="1.7" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:label="@string/app_name"
            android:name="com.neoware.brazilplanner.PlannerHomeActivity"
            android:theme="@style/Theme.Styled"
            android:screenOrientation="portrait" >

            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/app_name"
            android:name="com.neoware.brazilplanner.GamesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Styled" />
        
        <activity
            android:label="@string/app_name"
            android:name="com.neoware.brazilplanner.VenuesActivity"
            android:theme="@style/Theme.Styled"
            android:screenOrientation="portrait" />

        <activity
            android:label="@string/app_name"
            android:name="com.neoware.brazilplanner.TeamsActivity"
            android:theme="@style/Theme.Styled"
            android:screenOrientation="portrait" />

        <activity
            android:label="@string/app_name"
            android:name="com.neoware.brazilplanner.SquadActivity"
            android:theme="@style/Theme.Styled"
            android:screenOrientation="portrait" />

        <activity
            android:label="@string/app_name"
            android:name="com.neoware.brazilplanner.NewsActivity"
            android:theme="@style/Theme.Styled"
            android:screenOrientation="portrait" />

        <activity
            android:label="@string/app_name"
            android:name="com.neoware.brazilplanner.WebViewActivity"
            android:theme="@style/Theme.Styled"
            android:screenOrientation="portrait" /> 

        <service
            android:enabled="true"
            android:name="com.neoware.brazilplanner.E12DataService"
            android:exported="false" />

        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            />

    </application>
</manifest>